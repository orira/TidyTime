<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_default">

    <com.baws.tidytime.widget.RobotoTextView
        style="@style/Label"
        android:id="@+id/tv_add_photo"
        android:alpha="0"
        android:gravity="center_horizontal"
        android:text="@string/label_add_photo"
        android:layout_marginBottom="@dimen/margin_default"
        custom:typeface="THIN" />

    <com.baws.tidytime.widget.CircularImageView
        style="@style/Avatar"
        android:id="@+id/iv_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_add_photo"
        custom:border="true"
        custom:border_width="@dimen/margin_smallest"
        custom:border_color="@color/application_colour"
        custom:shadow="true"
        custom:selector="true"
        custom:selector_color="@color/application_colour_translucent"
        custom:selector_stroke_color="@color/application_colour_dark"
        custom:selector_stroke_width="@dimen/margin_smallest" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/fl_enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_below="@id/iv_profile_picture"
        android:layout="@layout/floating_layout"
        android:layout_marginLeft="@dimen/margin_default_x1.75"
        android:layout_marginRight="@dimen/margin_default_x1.75" />

    <ProgressBar
        android:id="@+id/pb_create_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0" />

</RelativeLayout>