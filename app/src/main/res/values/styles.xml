<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Default Size styles -->
    <style name="Size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size.MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Size.MatchParentWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size.MatchParentHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- Label Styles -->
    <style name="Label" parent="Size.MatchParentWidth">
        <item name="android:lines">1</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">11dp</item>
    </style>

    <style name="Label.MarginTop">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="Label.MarginTop.NewSection">
        <item name="android:layout_marginTop">@dimen/margin_default_x2</item>
    </style>

    <!-- Input Styles -->
    <style name="Input" parent="Size.MatchParentWidth">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:inputType">text|textAutoCorrect|textCapSentences|textAutoComplete</item>
    </style>

    <!-- Avatar Syles -->
    <style name="Avatar" parent="Size">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>



</resources>
