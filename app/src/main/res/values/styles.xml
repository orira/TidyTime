<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/apptheme_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/apptheme_activated_background_holo_light</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/application_colour</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>

    <style name="ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <!-- Default Size styles -->
    <style name="Size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size.MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Size.MatchParentWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size.MatchParentHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- AnchorView Styles -->
    <style name="AnchoreView" parent="Size.MatchParentWidth" />

    <style name="AnchoreView.Left">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="AnchoreView.Right">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="AnchoreView.Right.TopMargin">
        <item name="android:layout_marginTop">@dimen/assign_chore_input_top_margin</item>
    </style>


    <!-- Label Styles -->
    <style name="Label" parent="Size.MatchParentWidth">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:paddingLeft">11dp</item>
    </style>

    <style name="Label.MarginTop">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="Label.MarginBottom">
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="Label.Left">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Label.Left.MarginBottom">
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="Label.Left.MarginTop">
        <item name="android:layout_marginTop">@dimen/margin_default_x1.5</item>
    </style>

    <!-- Input Styles -->
    <style name="Input" parent="Size.MatchParentWidth">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:inputType">text|textAutoCorrect|textCapSentences|textAutoComplete</item>
    </style>

    <!-- Spinner Styles -->
    <style name="Spinner" parent="Size.MatchParentWidth">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingLeft">@dimen/margin_default_half</item>
    </style>

    <style name="Spinner.Padding">
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:paddingRight">@dimen/margin_default_half</item>
        <item name="android:paddingLeft">@dimen/margin_default_half</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:src">@drawable/image_placeholder</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:alpha">0</item>
    </style>
</resources>
